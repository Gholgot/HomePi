{
  "compilerOptions": {
      "module": "commonjs",
      "lib": ["es2016"],
      "target": "es2016",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "./bin/",
      "sourceMap": true,
      "esModuleInterop": true
  },
  "files": ["server.ts"],
  "include": [
      "src/**/*",
      "node_modules/fp-ts/lib"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}